<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="usuario"
            type="dominando.addicted.android.databinding.Usuario" />
        <variable
            name="tratador"
            type="dominando.addicted.android.databinding.TratadorMagico"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{usuario.nome}"
            android:textSize="20sp"
            android:onClick="@{tratador.click}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{usuario.sobrenome}"
            android:textSize="20sp"
            android:onLongClick="@{tratador.longClick}"/>/>
    </LinearLayout>
</layout>
